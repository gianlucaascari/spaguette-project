{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}